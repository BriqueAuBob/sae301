{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container px-4">
        {% if app.user.firstname is defined %}
            <div>
                <p>Bonjour {{ app.user.firstname }}</p>
            </div>
        {% endif %}
        <div>
            {{ component('SearchHomework', {
                'placeholder': 'Rechercher un rendu',
                'icon': 'calendar',
            }) }}
        </div>
        <div>
            {% for homework in homeworks %}
            {% include('components/FullHomeworkCard.html.twig')%}
            {% endfor %}
        </div>
        <div class="mt-4">
            {% include('components/button.html.twig') with { text: "Créer un rendu" } %}
            {% include('components/button.html.twig') with { text: "Créer un rendu", type: "secondary" } %}
            {% include('components/button.html.twig') with { text: "Créer un rendu", type: "tertiary" } %}
            {% include('components/button.html.twig') with { text: "Créer un rendu", color: "warning" } %}
            {% include('components/button.html.twig') with { text: "Créer un rendu", type: "secondary", color: "warning" } %}
            {% include('components/button.html.twig') with { text: "Créer un rendu", type: "tertiary", color: "warning" } %}
            {% include('components/button.html.twig') with { text: "Créer un rendu", color: "danger" } %}
            {% include('components/button.html.twig') with { text: "Créer un rendu", type: "secondary", color: "danger", iconLeft: "calendar" } %}
            {% include('components/button.html.twig') with { text: "Créer un rendu", type: "tertiary", color: "danger" } %}
            {% include('components/button.html.twig') with { text: "Créer un rendu", color: "info" } %}
            {% include('components/button.html.twig') with { text: "Créer un rendu", type: "secondary", color: "info" } %}
            {% include('components/button.html.twig') with { text: "Créer un rendu", type: "tertiary", color: "info" } %}
        </div>
    </div>


{% endblock %}

