<div class="flex border-2 border-primary-100 rounded-xl px-4">
    <label for="{{ id }}" class="">{{ label }}</label>
    {% if icon is defined %}
        <img src="{{ asset('images/icons/' ~ icon ~ '.svg' ) }}" alt="{{ icon }}"  class="inline-block mr-1">
    {% endif %}
    <input class="w-full h-full py-3" name="{{ name }}" id="{{ id }}" type="{{ type|default('text') }}" placeholder="{{ placeholder }}">
</div>
