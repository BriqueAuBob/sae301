<div>
    <label for="{{ id }}" class="font-medium text-sm ml-1">{{ label }}</label>
    <div class="flex border-2 border-primary-100 rounded-xl px-4">
        {% if icon is defined %}
            <img src="{{ asset('images/icons/' ~ icon ~ '.svg' ) }}" alt="{{ icon }}"  class="inline-block mr-1">
        {% endif %}
        <input class="w-full h-full py-3 focus:outline-none"
               name="{{ name }}"
               id="{{ id }}"
               type="{{ type|default('text') }}"
               placeholder="{{ placeholder }}"
               value="{{ value|default('') }}"
                {% if required is defined and required %}required{% endif %}
                {% if disabled is defined and disabled %}disabled{% endif %}
                autocomplete="{{ autocomplete|default('off') }}"
                {% if autofocus is defined and autofocus %}autofocus{% endif %}
                {% if readonly is defined and readonly %}readonly{% endif %}
    </div>
</div>
