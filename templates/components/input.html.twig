        <img src="{{ asset('images/icons/' ~ icon ~ '.svg' ) }}" alt="{{ icon }}"  class="inline-block mr-1">
    {% endif %}
    <input class="w-full h-full py-3" type="text" placeholder="{{ placeholder }}">
</div>
