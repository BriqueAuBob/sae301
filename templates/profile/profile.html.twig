{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <div class="container p-4">
        <div class="flex flex-col lg:justify-between lg:gap-8 lg:flex-row-reverse">
            <div>
                <h1 class="text-2xl mb-4">Mon profil</h1>
                <div class="bg-primary-500 lg:px-14 py-5 px-2 rounded-2xl border-primary-600 border-2 flex flex-col items-center lg:w-fit">
                    <h4><span class="font-bold">{{ app.user.name }}</span> TP {{ app.user.group }}</h4>
                    <span>{{ app.user.email }}</span>
                </div>
            </div>
            <div class="mt-6 lg:mt-0">
                <h4 class="text-2xl mb-4">Historique</h4>
                <ul class="bg-white rounded-2xl border-gray-400 border-2 text-gray-900 text-sm font-medium p-5">
                    <li class="px-4 py-3 border-2 border-gray-400 w-full rounded-lg mb-3">Rendus épinglés</li>
                    <li class="px-4 py-3 border-2 border-gray-400 w-full rounded-lg mb-3">Liste des rendus créés</li>
                    <li class="px-4 py-3 border-2 border-gray-400 w-full rounded-lg">Commentaires déposés</li>
                </ul>
                <div></div>
                <div></div>
            </div>
        </div>
        <a href="{{ path('app_logout') }}">Se déconnecter</a>
    </div>
{% endblock %}