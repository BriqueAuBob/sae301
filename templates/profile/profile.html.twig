{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <div class="container p-4">
        <div class="flex flex-col lg:justify-between lg:gap-8 lg:flex-row-reverse">
            <div>
                <div class="flex justify-between items-center">
                    <h1 class="text-5xl mb-6">Mon profil</h1>
                    <div class="flex gap-2 mb-6">
                        <a href="{{ path('app_settings') }}">{{ include('@icons/settings.svg') }}</a>
                        <a href="{{ path('app_logout') }}">{{ include('@icons/logout.svg') }}</a>
                    </div>
                </div>
                <div class="bg-primary-500 lg:px-14 py-5 px-2 rounded-2xl border-primary-600 border-2 flex flex-col items-center lg:w-fit">
                    <h4><span class="font-bold">{{ app.user.name }}</span> TP {{ app.user.group }}</h4>
                    <span>{{ app.user.email }}</span>
                </div>
            </div>
            <div class="mt-6 lg:mt-0">
                <h4 class="text-2xl mb-4">Historique</h4>
                <ul class="bg-white rounded-2xl border-2 text-gray-900 text-sm font-medium p-4">
                    <li class="px-4 py-3 border-2 w-full rounded-lg mb-3 flex justify-between items-center" id="li-1">Rendus épinglés {{ include('@icons/arrow-down.svg') }}</li>
                    <li class="px-4 py-3 border-2 w-full rounded-lg mb-3 flex justify-between items-center" id="li-2">Liste des rendus créés {{ include('@icons/arrow-down.svg') }}</li>
                    <li class="px-4 py-3 border-2 w-full rounded-lg flex justify-between items-center" id="li-3">Commentaires déposés {{ include('@icons/arrow-down.svg') }}</li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}